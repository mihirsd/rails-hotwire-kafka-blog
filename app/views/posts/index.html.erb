<div>
  <div class="mb-6">
    <h1 class="text-2xl font-bold mb-2">Blog Posts</h1>
  </div>

  <div class="bg-white border p-4 mb-6">
    <h2 class="text-xl font-bold mb-4">Create New Post</h2>
    <%= render "form", post: @post %>
  </div>

  <div class="mb-4">
    <% if @posts.any? %>
      <%= render @posts %>
    <% else %>
      <div class="text-center py-8">
        <h3 class="text-lg font-bold mb-2">No posts yet</h3>
        <p>Create your first post!</p>
      </div>
    <% end %>
  </div>
</div>
