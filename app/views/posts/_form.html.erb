<div data-controller="post-form">
  <%= form_with model: post, data: { post_form_target: "form" } do |f| %>
    <% if post.errors.any? %>
      <div class="bg-red-100 border p-4 mb-4 error_messages">
        <h4 class="text-sm font-bold mb-2">Please fix the following errors:</h4>
        <ul class="text-sm">
          <% post.errors.full_messages.each do |message| %>
            <li>- <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :title, class: "block text-sm font-bold mb-1" %>
      <%= f.text_field :title, 
          class: "w-full px-3 py-2 border", 
          placeholder: "Post title" %>
    </div>

    <div class="mb-4">
      <%= f.label :body, "Content", class: "block text-sm font-bold mb-1" %>
      <%= f.text_area :body, 
          rows: 5, 
          class: "w-full px-3 py-2 border", 
          placeholder: "Share your thoughts..." %>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Publish Post", 
          class: "bg-blue-600 text-white font-bold py-2 px-4" %>
      <button type="button" 
              data-action="click->post-form#clear"
              class="bg-gray-500 text-white font-bold py-2 px-4 hover:bg-gray-600">
        Clear
      </button>
    </div>
  <% end %>
</div>
